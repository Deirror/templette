package toaster

templ Toast(p Props) {
	<div { p.AsTemplAttrs()... }>
        <button
			type="button"
			class="toast-close"
			aria-label="Close"
			hx-swap="delete">
			Ã—
		</button>

		if p.Title != "" {
			<div class="toast-title">
				{ p.Title }
			</div>
		}

		<div class="toast-body">
			if p.Message != "" {
				{ p.Message }
			} else {
				{ children... }
			}
		</div>
	</div>
}

