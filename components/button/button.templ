package button

import ( 
    propsx "github.com/Deirror/templette/props"
)

templ Button(props ...Props) {
    {{ p := propsx.FirstOrDefault(Props{}, props...) }}

    if p.Href != "" {
        <a { p.AsTemplAttrs()... }>
            { children... }
        </a>
    } else {
        <button { p.AsTemplAttrs()... }>
            { children... }
        </button>
    }
}
